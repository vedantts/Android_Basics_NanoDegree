        android:text="Atif Aslam" />

    <TextView
        style="@style/CategoryStyle4"
        android:text="Rahat Fateh Ali Khan" />
    <TextView
        style="@style/CategoryStyle4"
        android:text="Armaan Malik" />
    <TextView
        style="@style/CategoryStyle4"
        android:text="Taylor Swift" />
    <TextView
        style="@style/CategoryStyle4"
        android:text="The Script" />
    <TextView
        style="@style/CategoryStyle4"
        android:text="Coldplay" />
    <TextView
        style="@style/CategoryStyle4"
        android:text="Sonu Nigam"/>
